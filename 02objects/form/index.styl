/* horizontal Form */

.form
  &__group  
    label
      float left
      width 25%
      margin-right 5%
      text-align right
    input[type="text"], 
    input[type="number"], 
    input[type="email"], 
    input[type="password"], 
    input[type="search"], 
    select
      width 50%
    textarea  
      width 50%
    &--checkbox
      margin-left 30%
      height auto
      label
        text-align left 
        width auto
        margin-right 1em
        display inline
        float none

/* vertical Form */

.form--vertical
  .form__group
    label
      display block
      float none
      width auto
      text-align left
    &--checkbox 
      margin-left 0
      label
        display inline

