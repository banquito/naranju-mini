/* nav */

navigation($backgroundColor = $titleColor, $textColor = #fff)
  list-style: none; 
  margin:0; 
  padding: 0;
  cf()
  li a
    margin: 0; 
    padding:1em; 
    display: block;
    line-height:1em;
    color: $textColor;
    &:hover, 
    &:focus
      background: darken($backgroundColor, 5%);
      text-decoration: none;


horizontal_navigation($backgroundColor = $titleColor, $textColor = #fff)
  navigation($backgroundColor, $textColor);
  background: $backgroundColor;
  z-index:10;
  font-size: 1.5rem;
  li
    float: left; 
    margin: 0 0 0 2em; 
    height:3em;

vertical_navigation($backgroundColor = $titleColor, $textColor = #fff)
  navigation($backgroundColor, $textColor);
  border-bottom: 1px solid lighten($backgroundColor, 5%);
  background:$backgroundColor;
  li a
    border-bottom: 1px solid darken($backgroundColor, 5%);
    border-top: 1px solid lighten($backgroundColor, 5%);

if $use-nav
  .nav      
    horizontal_navigation()
  .nav--lighten
    horizontal_navigation($titleColorLight)
  .nav--darken
    horizontal_navigation($titleColorDark)

  .nav-vertical       
    vertical_navigation()
  .nav-vertical--lighten
    vertical_navigation($titleColorLight)
  .nav-vertical--darken
    vertical_navigation($titleColorDark)




