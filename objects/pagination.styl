pagination()
  list-style: none
  margin: 0
  text-align: center
  li
    display: inline-block
    text-align: center
  &__link
    padding: 5px 10px
    &--active
      cursor: default
      font-weight: bold
    &--prev
      padding: 10px
    &--next
      padding: 10px

if $use-pagination
  .pagination
    pagination()