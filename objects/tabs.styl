tabs()
  list-style: none
  margin: 0
  background: #f0f2f5
  border-bottom: 1px solid #e5e5e5
  .tabs__item
    display: inline-block
  .tabs__title
    display: block
    padding: 10px 15px
    color: #555
    &:hover
      background: rgb(247,247,247)
    &--active
      border-radius: 3px 3px 0 0
      background: #fff
      color: #555
      border: 1px solid #e5e5e5
      border-bottom: 1px solid #fff
      margin-bottom: -1px
    &--disabled
      background: transparent
      cursor: default
      color: #999

if $use-tabs
  .tabs
    tabs()